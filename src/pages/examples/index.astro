  // console.log('This will be shown in browser console')
</script>

<Layout>
  <h1 class="title">Astro Fen√≥meno</h1>
  <h2 class="h2 mb-5">Server Side Rendered variable: {h2}</h2>

  {
    childrenPages.map(page => (
      <>
        <a href={page.url} class="mb-3 block">
          <div class="p-10 bg-slate-700 sm:rounded-md">
            <h3 class="text-2xl font-bold">{page.url}</h3>
          </div>
        </a>
      </>
    ))
