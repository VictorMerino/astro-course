---
import Layout from '../../layouts/Layout.astro'

import { ButtonsInReact } from '../../components/examples/ButtonsInReact'
import LinkCard from '../../components/LinkCard.astro'

console.log('This will be shown in server console')
const h2 = 'Variable from Server'
const h2Color = '#cac5c5'

const hobbiesList = ['read', 'music', 'sports']

const isActive = false

const childrenPages = await Astro.glob('./**/*.astro')
// console.log(childrenPages[0])
// console.log(Astro)
---

<style define:vars={{ h2Color }}>
  .h2 {
    color: var(--h2Color);
  }
</style>

<script>
  // console.log('This will be shown in browser console')
</script>

<Layout>
  <h1 class="title">Astro Fen√≥meno</h1>
  <h2 class="h2 mb-5">Server Side Rendered variable: {h2}</h2>

  {childrenPages.map(page => <LinkCard url={page.url} text={page.url} />)}

  <hr />
  TO OTHER PAGE:
  <h2>Hobbies from Array</h2>
  <ul>
    {hobbiesList.map(hobbie => <li>{hobbie}</li>)}
  </ul>
  TO OTHER PAGE:
  <p>Is active? {isActive ? 'Yes' : 'No'}</p>
  <hr />
  <ButtonsInReact client:load />
</Layout>
