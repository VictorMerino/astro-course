---
const response = await fetch('https://jsonplaceholder.typicode.com/posts/')
const posts = await response.json()
console.log(posts)
// https://jsonplaceholder.typicode.com/posts
---

<h1>Posts</h1>
<ul style="list-style: none; padding-left: 0">
  {
    posts.map(post => (
      <li>
        <h3>{post.title}</h3>
        <p>{post.body}</p>
        <hr />
      </li>
    ))
  }
</ul>
