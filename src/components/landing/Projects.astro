---
import { projects } from '../../config/projects.json'
---

<section class="flex flex-col">
  <div class="text-center mb-5">
    <h2 class="text-center font-bold text-center text-4xl mt-10 mb-2">
      Projects
    </h2>
    <p>
      The content of this section is imported from a JSON object, and
      destructuring it
    </p>
  </div>
  <div>
    {
      projects.map(project => (
        <div class="flex flex-col sm:flex-row gap-10 align-center mb-12 text-center sm:text-left">
          <div class="flex-1">
            <h3 class="mb-4 font-bold text-2xl">{project.title}</h3>
            <p class="mb-4">{project.description}</p>
            <button class="bg-indigo-600 px-3 py-2 hover:bg-indigo-500">
              More info
            </button>
          </div>
          <div class="flex flex-1 justify-center">
            <img
              src={project.image}
              alt={project.title}
              class="w-60"
              width="240"
              loading="lazy"
            />
          </div>
        </div>
      ))
    }
  </div>
</section>
