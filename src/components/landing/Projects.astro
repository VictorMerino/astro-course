---
import { projects } from '../../config/projects.json'
---

<h2>Projects</h2>
{
  projects.map(project => (
    <div class="flex mb-5 text-center sm:text-left">
      <div class="flex-1">
        <h3 class="mb-4 font-bold text-2xl">{project.title}</h3>
        <p class="mb-4">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
          More info
        </button>
      </div>
      <div class="flex-1">
        <img src={project.image} alt={project.title} class="w-80" />
      </div>
    </div>
  ))
}
