---
import Footer from '../components/structure/Footer.astro'
import Header from '../components/structure/Header.astro'

interface Props {
  pageTitle?: string
  pageDescription?: string
}
const { pageTitle = 'Default title', pageDescription = 'Default description' } =
  Astro.props.frontmatter || Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/astro-demo/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Landing | {pageTitle}</title>
    <meta name="description" content={pageDescription} />
  </head>
  <body class="bg-slate-800 text-slate-50">
    <div class="flex flex-col h-screen">
      <Header />
      <main class="container sm:my-8 flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
